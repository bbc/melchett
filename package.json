{
    "name": "melchett",
    "version": "3.0.4",
    "description": "A plugin-based HTTP client for NodeJS",
    "main": "dist/client.js",
    "scripts": {
        "build": "rm -rf dist/ && npm run compile",
        "compile": "tsc",
        "lint": "eslint lib test --ext .js,.ts,.tsx",
        "pretest": "npm run lint",
        "test": "jest",
        "test:spec": "npx jest lib",
        "test:endtoend": "npx jest test/endtoend",
        "prepare": "npm run build",
        "preversion": "npm test",
        "postversion": "git push origin master --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bbc/melchett.git"
    },
    "files": [
        "dist/**/*"
    ],
    "author": "BBC",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/bbc/melchett/issues"
    },
    "homepage": "https://github.com/bbc/melchett#readme",
    "dependencies": {
        "@hapi/wreck": "^16.0.1",
        "axios": "^0.19.2",
        "koa-compose": "^4.1.0",
        "opossum": "^4.2.4",
        "uuid": "^3.4.0"
    },
    "devDependencies": {
        "@types/catbox": "^10.0.6",
        "@types/jest": "^24.9.1",
        "@types/nock": "^10.0.3",
        "@types/node": "^12.12.28",
        "@types/opossum": "^4.1.0",
        "@types/split": "^1.0.0",
        "@types/uuid": "^7.0.0",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^24.9.0",
        "nock": "^10.0.6",
        "ts-jest": "^24.3.0",
        "ts-node": "^7.0.1",
        "typescript": "^3.8.2"
    }
}
