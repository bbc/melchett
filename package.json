{
  "name": "melchett",
  "version": "3.0.1",
  "description": "A plugin-based HTTP client for NodeJS",
  "main": "dist/client.js",
  "scripts": {
    "build": "rm -rf dist/ && npm run compile",
    "compile": "tsc",
    "lint": "eslint lib test --ext .ts,.tsx",
    "pretest": "npm run lint",
    "test": "jest",
    "test:spec": "npx jest lib",
    "test:endtoend": "npx jest test/endtoend",
    "prepare": "npm run build",
    "preversion": "npm test",
    "postversion": "git push origin master --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/melchett.git"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/melchett/issues"
  },
  "homepage": "https://github.com/bbc/melchett#readme",
  "dependencies": {
    "@hapi/wreck": "^16.0.1",
    "axios": "^0.19.0",
    "koa-compose": "^4.1.0",
    "opossum": "^4.2.1"
  },
  "devDependencies": {
    "@types/catbox": "^10.0.6",
    "@types/jest": "^24.0.15",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.0.10",
    "@types/opossum": "^4.1.0",
    "@types/split": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.7.2"
  }
}
